<div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-3">Lista de habitaciones</h1>
     </div>
</div>

<div class="container">
  <div class="row">
    <table class="table">
      <thead class="thead-inverse">
        <tr>
          <th>Status</th>
          <th>Tipo</th>
          <th>Fecha ocupada</th>
          <th>Precio</th>
          <th>Adultos</th>
          <th>Niños</th>
          <th>Fecha Check in </th>
          <th>Fecha Check out</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @rooms.each do |room| %>
          <tr>
            <td><%= room.status %></td>
            <td><%= room.type %></td>
            <td><%= room.date_occupied %></td>
            <td><%= room.price %></td>
            <td><%= room.adult %></td>
            <td><%= room.kid %></td>
            <td><%= room.date_start %></td>
            <td><%= room.date_end %></td>
            <td><%= link_to 'Show', room %></td>
            <td><%= link_to 'Edit', edit_room_path(room) %></td>
            <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Nueva habitación', new_room_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>