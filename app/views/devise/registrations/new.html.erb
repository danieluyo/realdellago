<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h2>Registra una nueva cuenta de administrador</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-1">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <strong><%= f.label :correo_electrónico %><br /></strong>
          <%= f.email_field :email, autofocus: true, placeholder: "example@mail.com" %>
        </div>
        <br>
        <div class="field">
          <strong><%= f.label :contraseña %></strong>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
        <br>
        <div class="field">
          <strong><%= f.label :confirma_contraseña %><br /></strong>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "Regístrate", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
